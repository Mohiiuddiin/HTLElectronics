@foreach (var category in Model.ProductCategory)
{
    <p>|</p>
    <li class="nav-item">
        @if (Request["Category"] == category.Category)
        {
            <a class="btn btn-info active" href="/?Category=@category.Category" style="font-weight:bold">
                <img width="30" height="22" src="~/Content/Icons/@category.Icon" /> @category.Category
            </a>
        }
        else
        {
            <a class="btn btn-light bg-light" href="/?Category=@category.Category" style="color:black;font-weight:bold">
                
                <img width="30" height="22" src="~/Content/Icons/@category.Icon" /> @category.Category
            </a>
        }
    </li>
    
}
