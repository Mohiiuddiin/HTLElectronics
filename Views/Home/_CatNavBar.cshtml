            <img width="30" height="22" src="~/Content/Icons/icons8-all-64.png" /> ALL
        </a>
    }
    else
    {
        <a class="btn btn-light" href="/" style="color: black; font-weight: bold">
            <img width="30" height="22" src="~/Content/Icons/icons8-all-64.png" /> ALL
        </a>
    }

