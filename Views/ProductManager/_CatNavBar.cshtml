@model HTLElectronics.ViewModels.ProductListView

@*@{
        ViewBag.Title = "Index";
    }*@
<div class="btn-group">
    @*<a href="#!" class="btn btn-primary active">Active link</a>*@
    @Html.ActionLink("All", "Index", null, new { @class = Request["Category"] == null ? "btn btn-primary active" : "btn btn-light", style = "font-weight:bold" })
    @foreach (var category in Model.ProductCategory)
    {
        @Html.ActionLink(category.Category, "Index", new { Category = category.Category }, new { @class = Request["Category"] == category.Category ? "btn btn-primary active" : "btn btn-primary bg-light", style = "color:black;font-weight:bold" })

    }
    @*<a href="#!" class="btn btn-primary">Link</a>
        <a href="#!" class="btn btn-primary">Link</a>*@
</div>